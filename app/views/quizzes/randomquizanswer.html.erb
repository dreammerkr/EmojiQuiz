<div class="row">
            <div class="quizSolve">
                <div class="col span-2-of-3">
                    <div class = "like_button">
                         <%= render 'icons' %>
                     </div>
                    <p><strong>주제</strong> <%= @quiz.Category%></p>
                    <div class="quizAnswerHere">
                        <h5>정답 공개!</h5>
                    </div>
                    <div class="quizAnswer">
                        <h5><%= @quiz.content %><h5>
                        <h5><%= @quiz.answer %></h5>
                    </div>
                    <a class="btn btn-share" href="#">
                        퀴즈 공유하기
                    </a>
                    <a class="btn btn-full" href="/random/<%= @index+1 %>">
                        다음 문제
                    </a>
                </div>
            </div>
</div>